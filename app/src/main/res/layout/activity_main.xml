<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:new="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.war.desktop.desktopwar.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="故事模式"
        android:id="@+id/btn_story"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="215dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="随机模式"
        android:id="@+id/btn_random"
        android:layout_below="@+id/btn_story"
        android:layout_alignStart="@+id/btn_story" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="自定义模式"
        android:id="@+id/btn_diy"
        android:layout_below="@+id/btn_random"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
